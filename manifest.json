{
  "manifest_version": 2,
  "name": "SitesChecker",
  "description": "Extension to show notifications on specific sites",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://www.softomate.net/*"
  ]
}
